@page
@model CreateModel
@{
    ViewData["Title"] = "Create page";
}

<br />
<h2 class="text-info">Create New Book</h2>

<div class="border container" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="People.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="People.Name" class="form-control" />
            </div>
            <span asp-validation-for="People.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="People.Number"></label>
            </div>
            <div class="col-6">
                <input asp-for="People.Number" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="People.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="People.Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="People.Address"></label>
            </div>
            <div class="col-6">
                <input asp-for="People.Address" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
