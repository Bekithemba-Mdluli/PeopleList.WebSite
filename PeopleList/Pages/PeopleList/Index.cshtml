@page
@model IndexModel
@{
    ViewData["Title"] = "People List page";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-info">People List</h2>
    </div>

    <div class="col-2">
        <a asp-page="Create" class="btn btn-info form-control text-white"> Create Person Contact</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.People.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="People.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="People.FirstOrDefault().Number"></label>
                        </th>
                        <th>
                            <label asp-for="People.FirstOrDefault().Email"></label>
                        </th>
                        <th>
                            <label asp-for="People.FirstOrDefault().Address"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.People)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Number)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Address)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No contacts available.</p>
            }

        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th> Author</th>
                    <th> ISBN</th>
                    <th> Address</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/peopleList.js"></script>
}